{
  "name": "dashy-next-dashboard",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:pg": "cross-env NEXT_PUBLIC_PERSIST_REMOTE=1 PERSIST_DRIVER=postgres DATABASE_URL=postgres://dashy:dashy@localhost:5432/dashy next dev -H 0.0.0.0",
    "dev:sqlite": "cross-env NEXT_PUBLIC_PERSIST_REMOTE=1 PERSIST_DRIVER=sqlite SQLITE_FILE=./data.sqlite next dev -H 0.0.0.0",
    "build": "next build",
    "start": "next start",
    "start:pg": "cross-env NEXT_PUBLIC_PERSIST_REMOTE=1 PERSIST_DRIVER=postgres DATABASE_URL=postgres://dashy:dashy@localhost:5432/dashy next start",
    "start:sqlite": "cross-env NEXT_PUBLIC_PERSIST_REMOTE=1 PERSIST_DRIVER=sqlite SQLITE_FILE=./data.sqlite next start",
    "docker:pg": "docker compose --profile pg up",
    "docker:pg:down": "docker compose --profile pg down -v",
    "docker:sqlite": "docker compose --profile sqlite up",
    "docker:sqlite:down": "docker compose --profile sqlite down -v",
    "type-check": "tsc --noEmit",
    "analyze": "cross-env ANALYZE=true next build",
    "storybook": "storybook dev -p 6006 -s public",
    "build-storybook": "storybook build -o storybook-static -s public",
    "backstop:test": "backstop test",
    "backstop:approve": "backstop approve",
    "lhci:collect": "lhci collect --config=./lighthouserc.json",
    "lhci:assert": "lhci assert --config=./lighthouserc.json"
  },
  "dependencies": {
    "next": "14.2.5",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "framer-motion": "^11.0.0",
    "@radix-ui/react-select": "^2.0.0",
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.1",
    "next-auth": "^4.24.7",
    "jwt-decode": "^4.0.0",
    "chardet": "^1.6.0",
    "iconv-lite": "^0.6.3"
  },
  "devDependencies": {
    "@types/node": "20.12.12",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "typescript": "5.4.5",
    "cross-env": "^7.0.3",
    "critters": "^0.0.22",
    "axe-core": "^4.9.0",
    "jest-axe": "^9.0.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "@lhci/cli": "^0.12.0",
    "backstopjs": "^6.3.25",
    "@next/bundle-analyzer": "^14.2.5",
    "@storybook/react": "^8.0.0",
    "@storybook/addon-essentials": "^8.0.0",
    "@storybook/addon-a11y": "^8.0.0",
    "storybook": "^8.0.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12",
    "jest-environment-jsdom": "^29.7.0",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.5",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0"
  }
}
